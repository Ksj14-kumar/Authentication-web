                            <a onclick="city1()" class="btn btn-success btn-sm mt-3"><i class="fas fa-edit"></i></a>

                        </div>

                        <div class="pincode">

                            <label for="pincode">Pincode </label> <input type="text" name="pincode" minlength="6"
                                maxlength="6" id="pincode" class="form-control" value="<%= pincode %> " id="pincode"
                                required disabled>
                            <a onclick="pincode1()" class="btn btn-success btn-sm mt-3"><i class="fas fa-edit"></i></a>
                        </div>

                        <div class="phone">

                            <label for="phone">Phone No</label> <input type="tel" name="phone" class="form-control"
