                                id="contact_state" value="<%= state %> " required disabled>
                            <a onclick="state1()" class="btn btn-success btn-sm mt-3"><i class="fas fa-edit"></i></a>
                        </div>

                        <div class="city">

                            <label for="city">City</label> <input type="text" name="city" class="form-control" id="city"
