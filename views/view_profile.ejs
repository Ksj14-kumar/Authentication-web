                            <a onclick="phone1()" class="btn btn-success btn-sm mt-3"><i class="fas fa-edit"></i></a>
                        </div>

                        <div class="mobile">
                            <label for="mobile">Mobile No</label> <input type="tel" name="mobile" class="form-control"
                                value="<%= mobile %> " id="mobile_number" required disabled>
                            <a onclick="mobile1()" class="btn btn-success btn-sm mt-3"><i class="fas fa-edit"></i></a>

                        </div>

